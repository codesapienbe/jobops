{
  "name": "jobops_clipper",
  "version": "0.1.0",
  "description": "Chrome extension to clip web pages and send to JobOps app.",
  "scripts": {
    "build": "node build.js --outdir=../../dist/extension",
    "build:dev": "node build.js --mode=dev --watch --sourcemap --outdir=../../dist/extension",
    "build:prod": "node build.js --mode=prod --minify --sourcemap --outdir=../../dist/extension",
    "clean": "rimraf ../../dist/extension"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@types/chrome": "^0.0.258",
    "esbuild": "^0.25.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "dompurify": "^3.0.6"
  }
} 