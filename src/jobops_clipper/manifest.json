{
  "manifest_version": 3,
  "name": "JobOps Clipper",
  "version": "0.1.0",
  "description": "Clip web pages and send to JobOps app.",
  "permissions": ["scripting", "activeTab", "notifications", "clipboardWrite"],
  "host_permissions": ["http://localhost:8877/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 