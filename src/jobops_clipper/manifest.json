{
  "manifest_version": 3,
  "name": "JobOps Clipper",
  "version": "0.1.0",
  "description": "Clip web pages and send to JobOps app.",
  "permissions": ["scripting", "activeTab", "notifications", "clipboardWrite", "storage"],
  "host_permissions": ["http://localhost:8877/*", "https://api.groq.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 